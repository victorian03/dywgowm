<body>
    <div id="questionAndButtons">
        <h1>Do you wanna go out with me?</h1>
        
        <!-- Adaugare poza între întrebare și butoane -->
        <img id="betweenImage" src="https://i.pinimg.com/564x/09/41/83/0941838dc3024d2e5cc8e9139cbbecca.jpg" alt="Between Image">

        <div id="buttonContainer">
            <button id="yesButton" onclick="showResult('Right answer &lt;3')">Yes</button>
            <button id="noButton" onclick="moveNoButton()">No</button>
        </div>
    </div>

    <div id="resultMessage">Right answer &lt;3
        <!-- Adaugare poza sub răspuns -->
        <img id="bottomImage" src="https://i.pinimg.com/564x/c6/d3/fc/c6d3fc1b1622bc1da6540927b1f13953.jpg" alt="Bottom Image">
        <img id="resultImage" src="https://i.pinimg.com/564x/c6/d3/fc/c6d3fc1b1622bc1da6540927b1f13953.jpg" alt="Result Image">
    </div>

    <script>
        function showResult(message) {
            document.getElementById("resultMessage").innerText = message;
            document.getElementById("resultMessage").style.display = "block";
            
            // Ascunde întrebarea și butoanele
            document.getElementById("questionAndButtons").style.display = "none";

            // Afișează poza la pagina cu răspunsul
            document.getElementById("bottomImage").style.visibility = "visible";
            document.getElementById("resultImage").style.visibility = "visible";
        }

        function moveNoButton() {
            var button = document.getElementById("noButton");
            var newPositionX = Math.random() * window.innerWidth;
            var newPositionY = Math.random() * window.innerHeight;
            button.style.left = newPositionX + "px";
            button.style.top = newPositionY + "px";
        }
    </script>
</body>
